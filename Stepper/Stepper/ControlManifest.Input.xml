<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="NamespacePlaceholder" constructor="Stepper" version="0.0.63" display-name-key="Stepper"  control-type="virtual" >
    
    <external-service-usage enabled="false">
     
    </external-service-usage>

<property name="stepCount" display-name-key="stepCount" of-type="Whole.None" usage="input" default-value= "3"/>
<property name="isSubmittable" display-name-key="isSubmittable" of-type="TwoOptions" usage="input" default-value= "true"/>
<property name="variantType" display-name-key="variantType" of-type="SingleLine.Text" usage="input" default-value= "text"/>
<property name="showBorder" display-name-key="showBorder" of-type="TwoOptions" usage="input" default-value= "true"/>
<property name="useTestHarness" display-name-key="useTestHarness" of-type="TwoOptions" usage="input" default-value= "true"/>
<property name="useDarkMode" display-name-key="useDarkMode" of-type="TwoOptions" usage="input" pfx-default-value= "varUseDarkMode"/>
<property name="primaryColor" display-name-key="primaryColor" of-type="SingleLine.Text" usage="input" pfx-default-value= "varAppPrimaryColor"/>
<property name="containerWidth" display-name-key="containerWidth" of-type="Whole.None" usage="input" pfx-default-value = 'Self.Width'/>
<property name="containerHeight" display-name-key="containerHeight"  of-type="Whole.None" usage="input" pfx-default-value = 'Self.Height'/>

<property name="outputCurrentStepIndex" display-name-key="currentStepIndex" of-type="Whole.None" usage="output" default-value= "0"/>

<!-- Events -->

    <event name="OnSubmit"
   pfx-default-value='Notify("No submit event", NotificationType.Error, 2000)'
   display-name-key="OnSubmit"
   description-key="OnSubmit" />

    <resources>
      <code path="index.ts" order="1"/>
      <platform-library name="React" version="16.14.0" />
      <platform-library name="Fluent" version="9.46.2" />
      <css path = '../../dist/output.css' order = "1"/>
  
    </resources>
    
  </control>
</manifest>
